/* pages/room.wxss */

.room {
  width: 100vw;
  height: 100vh;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -10;
}

.dialog {
  height: 200px;
  width: 160px;
  position: absolute;
  bottom: 12vh;
  right: 3vw;
  z-index: 1000;
  background-color: #f3f4f5;
  border-radius: 5px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.15);
  font-size: 15px;
}

.name-select {
  color: red;
}

.top {
  position: absolute;
  top: 0;
  left: 20vw;
}

.left {
  position: absolute;
  width: 3vw;
  top: 8vh;
  left: 5vw;
}

.right {
  position: absolute;
  width: 3vw;
  top: 8vh;
  right: 5vw;
}

.bottom {
  position: absolute;
  width: 100vw;
  bottom: 0;
}

.top-user {
  text-align: center;
  position: relative;
  height: 26px;
}

.left-user {
  line-height: 104px;
  vertical-align: top;
  display: inline-block;
  position: relative;
  text-align: right;
  width: 30vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right-user {
  line-height: 104px;
  vertical-align: top;
  display: inline-block;
  position: relative;
  text-align: left;
  width: 30vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom-user {
  position: relative;
  top: -5rpx;
  text-align: center;
}

.user-message {
  position: relative;
  left: -50%;
  font-size: 14px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  background-color: #F3F4F5;
  border-radius: 15px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.15);
  padding: 0 15px;
  color: #696A6B;
  vertical-align: top;
}

.center-top {
  position: absolute;
  top: 13vh;
  right: 20vw;
}

.center-left {
  position: absolute;
  width: 3vw;
  top: 10vh;
  left: 12vw;
}

.center-right {
  position: absolute;
  width: 3vw;
  bottom: 26vh;
  right: 13vw;
}

.center-bottom {
  position: absolute;
  left: 18vw;
  bottom: 18vh;
}
