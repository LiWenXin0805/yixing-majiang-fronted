/* pages/room.wxss */
.room {
  width: 100vw;
  height: 100vh;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed; 
  z-index: -1;
}

.name-select {
  color: red;
}

.top {
  position: absolute;
  top: 0;
  left: 20vw;
}

.left {
  position: absolute;
  width: 3vw;
  top: 8vh;
  left: 5vw;
}

.right {
  position: absolute;
  width: 3vw;
  top: 8vh;
  right: 5vw;
}

.bottom {
  position: absolute;
  left: calc(50vw - 310px);
  bottom: 0;
}

.center-top {
  position: absolute;
  top: 13vh;
  right: 20vw;
}

.center-left {
  position: absolute;
  width: 3vw;
  top: 10vh;
  left: 12vw;
}

.center-right {
  position: absolute;
  width: 3vw;
  bottom: 26vh;
  right: 13vw;
}

.center-bottom {
  position: absolute;
  left: 18vw;
  bottom: 20vh;
}